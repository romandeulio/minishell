# üõ†Ô∏è Compiler and options
CC         = cc
CFLAGS     = -Wall -Wextra -Werror 
AR         = ar rcs
RM         = rm -f
MAKE       = make --no-print-directory

# üìå Library name
NAME       = ft_printf.a

# üìú Source files for printf
SRCS = srcs/ft_printf.c \
	srcs/ft_putnbr_base.c \
	srcs/ft_putnbr_base_u.c \
	srcs/print_p.c \
	srcs/print_c_s.c \

# üî® Generate object files
OBJS       = $(SRCS:.c=.o)

# üìÇ Include directories
INCLUDES   = -Ilibft -Isrcs

# üé® Colors
GREEN      = \033[1;32m
YELLOW     = \033[1;33m
CYAN       = \033[1;36m
RED        = \033[1;31m
RESET      = \033[0m

# üìå Compile object files
%.o: %.c
	@$(CC) $(CFLAGS) -c $< -o $@

# üîπ Main compilation
all: $(NAME)

$(NAME): $(OBJS)
	@$(AR) $(NAME) $(OBJS)

# üßπ Clean object files
clean:
	@$(RM) $(OBJS)

# üóëÔ∏è Full cleanup
fclean: clean
	@$(RM) $(NAME)

# üîÑ Recompile from scratch
re: fclean all

# üìå Rules to prevent make from treating these as targets
.PHONY: all clean fclean re bonus